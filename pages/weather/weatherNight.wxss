/* pages/weather/weather.wxss */
.mycontainer{
    color:#fff;
    background-color: #000;
    margin: 0;
    padding: 0;
    font-size: 40rpx;
    font-family: Helvetica Neue 
}
.space-left{
    padding-left: 20rpx
}
.space-right{
    padding-right: 20rpx
}
.top{
    display: flex;
    flex-direction:column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding-top: 18%
}

.top-city{
    font-size: 70rpx
}
.top-cityscroll{
    position: fixed;
    top:0;
    z-index: 99
}
.top-weather{
    font-size: 40rpx
}
.top-weatherscroll{
    position: fixed;
    top:0;
    margin-top:80rpx;
    z-index: 99
}
.top-temp{
    display: flex;
    flex-direction:column;
    align-items: center;
    justify-content: space-between;
    font-size: 150rpx
}
.today{
    margin-top: 16%;
    margin-bottom: 2%;
    padding-bottom: 2%; 
    display: flex;
    flex-direction:row;
    flex-wrap:nowrap;
    justify-content:space-between;
    border-bottom: #fff solid 1px;
}
.today-today{
    font-size: 30rpx;
    text-align: bottom;
    line-height: 60rpx;
    padding-left: 10rpx;
}
.hour{
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
}
.hour-time{
    font-size: 24rpx
}
.hour-img{
    margin-top: 20rpx;
  
}
.hour-img image{
    width: 50rpx;
    height:50rpx
}
.hourly{
    width: 2400rpx;
    height: 15%;
    padding: 1.5%;
    margin-left: 2%;
    display: flex;
    flex-direction:row;
    flex-wrap:nowrap;
    justify-content:space-around;
}

.afterDays{
   margin-top: 2%;
   padding-top: 4%;
   border-top: #fff solid 1px;
   border-bottom: #fff solid 1px;
}
.day{
    display: flex;
    flex-direction:row;
    flex-wrap:nowrap;
    justify-content:space-between;
}
.day-temp{
    display: flex;
    flex-direction:row;
    flex-wrap:nowrap;
    justify-content:space-between;
    padding-right: 20rpx;
}
.desc{
    padding: 20rpx;
    border-bottom: #fff solid 1px;
}
.more-infor-container{
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content:space-between;
}
.more-infor{
    width: 50%;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    border-bottom: #fff solid 1px;
}
.foot{
   position:fixed; 
   bottom:0;
   width: 750rpx;
   height: 13%;
   border-top: #fff solid 1px;
   background-color: #000
}
.show{
    display: block
}
.noshow{
    display: none
}